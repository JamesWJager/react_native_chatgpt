{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "target": "esnext",
    "lib": ["esnext"],
    "rootDir": ".",
    "module": "es2015",
    "moduleResolution": "node",
    "declaration": false,
    "sourceMap": true,
    "inlineSources": true,
    "types": ["jest", "node"],
    "stripInternal": true,
    "incremental": true,
    "skipLibCheck": true,
    "inlineSourceMap": false,
    "noEmit": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "jsx": "react-native",
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true
  },
  "typeRoots": ["./src/@types"],
  "include": [
    "./src",
    "index.js",
    "__tests__",
    "src/@types/App.d.ts",
    "src/@types/env.d.ts",
    "./src/types",
    "src/global.d.ts",
    "bal.d.ts",
    "tsconfig.eslint.json"
  ],
  "exclude": ["tsconfig.json", "node_modules", "ios", "android", "_bundle"]
}
